<h2>Create a New Post</h2>


<%= form_with(model: @post, url: posts_path, method: :post, local: true, multipart: true) do |form| %>
  <div class="form-group">
    <%= form.text_area :content, placeholder: 'Write something...', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.file_field :media, class: 'form-control-file' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Post', class: 'btn btn-primary' %>
  </div>
<% end %>

