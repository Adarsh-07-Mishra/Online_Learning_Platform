<!-- app/views/documents/new.html.erb -->

<div class="upload-document-container">
  <%= form_for @document, url: documents_path, html: { multipart: true } do |f| %>
    <% if @document.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>
        <ul>
          <% @document.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :file, class: 'form-label' %>
      <%= f.file_field :file, class: 'form-input file-input' %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Upload Document', class: 'upload-button' %><br>
    </div>
  <% end %>
</div>
